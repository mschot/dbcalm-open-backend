#!/bin/bash
set -e

project_name="dbcalm"

# Stop services if they're running
if [ -d /run/systemd/system ]; then
    #check if the services are enabled
    if [ -f /usr/lib/systemd/system/$project_name-api.service ]; then
        systemctl stop $project_name-api || true
        systemctl disable $project_name-api || true
    fi
    if [ -f /usr/lib/systemd/system/$project_name-cmd.service ]; then
        systemctl stop $project_name-cmd || true
        systemctl disable $project_name-cmd || true
    fi
    if [ -f /usr/lib/systemd/system/$project_name-mariadb-cmd.service ]; then
        systemctl stop $project_name-mariadb-cmd || true
        systemctl disable $project_name-mariadb-cmd || true
    fi
fi

exit 0